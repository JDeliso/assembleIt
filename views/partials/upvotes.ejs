<script>

$('#upvote_<%=id%>').click(function () {

    if (!$("#upvote_<%=id%>").hasClass('on')){
      if ($('#downvote_<%=id%>').hasClass('on')){
        $('#downvote_<%=id%>').toggleClass("on");
        $("#upvote_<%=id%>").toggleClass("on");

        $.ajax({
        url: "/posts/<%= id%>/up"
        })
        .done((data) => {
        $("#votes_<%=id%>").text(data.votes);
        })

        $(".down<%=id%>").css("color", "blue");

        $.ajax({
        url: "/posts/<%= id%>/up"
        })
        .done((data) => {
        $("#votes_<%=id%>").text(data.votes);

        $(".up<%=id%>").css("color", "red");
      })
      } else {
          $("#upvote_<%=id%>").toggleClass('on');
          $.ajax({
          url: "/posts/<%= id%>/up"
          })
          .done((data) => {
          $("#votes_<%=id%>").text(data.votes);
          })

          $(".up<%=id%>").css("color", "red");
        }
    }
    else {
      $("#upvote_<%=id%>").toggleClass('on');

      $.ajax({
      url: "/posts/<%= id%>/down"
      })
      .done((data) => {
      $("#votes_<%=id%>").text(data.votes);
    })
    
    $(".up<%=id%>").css("color", "blue");
    }
  });
</script>