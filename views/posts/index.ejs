<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs', {title: "FRONT PAGE"}) %>

<body>
    <!-- navbar -->
    <%- include('../partials/nav.ejs') %>
    <a id="top"></a>

    <div class='submitPost'>
      <% if(posts.length === 0) { %>
        <p>There are no posts available yet.</p>
      <% } %>

      <% if (!user) { %>
        <a href="/signup" class="signupFrontPage"><h2 class="signupFrontPage blinking">SING UP HERE</h2></a>
      <% } %>

      <% if (user) { %>
        <form action="/posts" method="POST" class="form-group">
          <div class="form-group">
              <input type="text" name="title" class="form-control" placeholder="Title">
          </div>
          <div class="form-group">
              <textarea class="form-control" name="body" rows="3" placeholder="Context"></textarea>
          </div>
          <input type="text" name="user" class="form-control" value="<%=user.id%>" hidden>
          <div class="submitbtn"> <button type="submit" class="btn btn-primary btn-sm">SUBMIT</button> </div>
      </form>
    <% } %>
  </div>
  <div class='posts'>
      <ul>
          <% for(let i = posts.length-1; i >= 0; i--){ %>
              <li>
                  <div class="post-container">
                    <div class="posts-Vote">
                      <span>
                        <a href="/posts/<%= posts[i].id %>/down" class="btn btn-link btn-sm" id="downvote_<%=posts[i]%>"><i class="fas fa-caret-left vote-icon"></i></a>

                        <%= posts[i].votes %>
                        <a href="/posts/<%= posts[i].id %>/up" class="btn btn-link btn-sm" id="upvote_<%=posts[i]%>"><i class="fas fa-caret-right vote-icon"></i></a>

                      </span>
                    </div>
                    <div class="posts-Title">
                      <a href="/posts/<%= posts[i].id %>"> <%= posts[i].title %></a>
                      <br><small>Submitted <%= moment(posts[i].createdAt).startOf('hour').fromNow(); %> by <%= posts[i].username %> </small>
                    </div>
                    <div class="posts-Comment">
                      <a href="/posts/<%= posts[i].id%>#comments"><span><i class="fas fa-comment-dots"></i> comments</span></a>
                    </div>
                  </div>
              </li>
          <% } %>
          <li id="backtotop"><a href="#top"><i class="fas fa-arrow-up"></i> back to top</a></li>
      </ul>
  </div>





    <!-- footer -->
    <%- include('../partials/footer.ejs') %>

</body>
</html>
