<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Front Page</title>
  </head>
  <body>
    <main>
      <ul>
        <% posts.forEach(post => { %>
        <li>
          <a href="/posts/<%= post._id %>"> <%= post.title %> </a>
        </li>
        <% }) %>
      </ul>

      <% if(posts.length === 0) { %>
      <p>There are no articles available yet.</p>
      <% } %>
    </main>
  </body>
</html>
