<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs', {title: "LOGIN"}) %>

<body>
    <!-- navbar -->
    <%- include('../partials/nav') %>

    <div class="posts">
        <div class="auth-form">
            <div class="login-form">
                <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
                    <h4 class="text-center">ACCOUNT DELETE</h4>
                    <div class="form-group">
                        <input type="text" name="username" class="form-control" placeholder="Please type in your username" required>
                    </div>
                    <div class="form-group">
                        <label class="form-check-label"><input type="checkbox" required> I understand that once the account is delete all the info will be deleted.</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">DELETE ACCOUNT</button>
                    </div>
                    <div class="clearfix">

                        <a href="/" class="float-right">I don't want to delete</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- footer -->
    <%- include('../partials/footer') %>

</body>
</html>

